@model IEnumerable<BeerTracker5000.Models.Beer>

@{
    ViewData["Title"] = "Index";
}

<h2>My Beers!</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BeerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BreweryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Style)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Abv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ibu)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BeerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreweryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ibu)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
